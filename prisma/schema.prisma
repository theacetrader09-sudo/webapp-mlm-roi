generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String             @id @default(cuid())
  name          String?
  email         String             @unique
  password      String
  referralCode  String             @unique
  referredBy    String?
  role          UserRole           @default(USER)
  createdAt     DateTime           @default(now())
  deposits      Deposit[]
  earnings      Earnings[]
  transfersFrom InternalTransfer[] @relation("FromUser")
  transfersTo   InternalTransfer[] @relation("ToUser")
  investments   Investment[]
  wallet        Wallet?
  withdrawals   Withdrawal[]
}

model Wallet {
  id             String             @id @default(cuid())
  userId         String             @unique
  balance        Decimal            @default(0) @db.Decimal(18, 2)
  roiTotal       Decimal            @default(0) @db.Decimal(18, 2)
  referralTotal  Decimal            @default(0) @db.Decimal(18, 2)
  updatedAt      DateTime           @updatedAt
  depositBalance Decimal            @default(0) @db.Decimal(18, 2)
  earnings       Earnings[]
  transfersFrom  InternalTransfer[] @relation("FromWallet")
  transfersTo    InternalTransfer[] @relation("ToWallet")
  investments    Investment[]
  user           User               @relation(fields: [userId], references: [id])
}

model Package {
  id           String       @id @default(cuid())
  name         String
  description  String?
  minAmount    Decimal      @db.Decimal(18, 2)
  maxAmount    Decimal      @db.Decimal(18, 2)
  dailyROI     Decimal      @db.Decimal(5, 2)
  durationDays Int?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  investments  Investment[]
}

model Investment {
  id          String           @id @default(cuid())
  userId      String
  walletId    String
  packageId   String?
  packageName String
  amount      Decimal          @db.Decimal(18, 2)
  dailyROI    Decimal          @db.Decimal(5, 2)
  startDate   DateTime         @default(now())
  lastRoiAt   DateTime?
  isActive    Boolean          @default(true)
  status      InvestmentStatus @default(ACTIVE)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  package     Package?         @relation(fields: [packageId], references: [id])
  user        User             @relation(fields: [userId], references: [id])
  wallet      Wallet           @relation(fields: [walletId], references: [id])
}

model RoiCronRun {
  id        String   @id @default(cuid())
  runDate   DateTime @unique
  createdAt DateTime @default(now())
}

model CronRunLog {
  id                String   @id @default(cuid())
  runId             String?
  createdAt         DateTime @default(now())
  processed         Int
  skipped           Int
  totalRoiPaid      Decimal  @db.Decimal(18, 2)
  totalReferralPaid Decimal  @db.Decimal(18, 2)
  failedItems       Json?
  rawOutput         String?
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  amount    Decimal? @db.Decimal(18, 2)
  before    Decimal? @db.Decimal(18, 2)
  after     Decimal? @db.Decimal(18, 2)
  meta      Json?
  createdAt DateTime @default(now())
}

model Earnings {
  id          String   @id @default(cuid())
  userId      String
  walletId    String
  amount      Decimal  @db.Decimal(18, 2)
  type        String
  description String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  wallet      Wallet   @relation(fields: [walletId], references: [id])
}

model Deposit {
  id        String        @id @default(cuid())
  userId    String
  amount    Decimal       @db.Decimal(18, 2)
  txHash    String
  status    DepositStatus @default(PENDING)
  adminNote String?
  createdAt DateTime      @default(now())
  user      User          @relation(fields: [userId], references: [id])
}

model Withdrawal {
  id           String           @id @default(cuid())
  userId       String
  amount       Decimal          @db.Decimal(18, 2)
  walletBefore Decimal          @db.Decimal(18, 2)
  walletAfter  Decimal          @db.Decimal(18, 2)
  status       WithdrawalStatus @default(PENDING)
  adminNote    String?
  txReference  String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  user         User             @relation(fields: [userId], references: [id])
}

model InternalTransfer {
  id           String   @id @default(cuid())
  fromUserId   String
  toUserId     String
  fromWalletId String
  toWalletId   String
  amount       Decimal  @db.Decimal(18, 2)
  transferType String
  note         String?
  createdAt    DateTime @default(now())
  fromUser     User     @relation("FromUser", fields: [fromUserId], references: [id])
  fromWallet   Wallet   @relation("FromWallet", fields: [fromWalletId], references: [id])
  toUser       User     @relation("ToUser", fields: [toUserId], references: [id])
  toWallet     Wallet   @relation("ToWallet", fields: [toWalletId], references: [id])
}

enum UserRole {
  USER
  ADMIN
}

enum InvestmentStatus {
  ACTIVE
  CLOSED
  CANCELLED
}

enum DepositStatus {
  PENDING
  APPROVED
  REJECTED
}

enum WithdrawalStatus {
  PENDING
  APPROVED
  REJECTED
}
